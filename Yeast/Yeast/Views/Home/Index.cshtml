<div class="body stop-float-body clearfix" style="padding-top: 0px;">

    <div class=" not-container  page-main">
        <div class="main full">
            <div class="container">
                <div class="on">
                    <section class="heroCarousel slick-initialized slick-slider" data-slick="">
                        <div class="on">
                            <div id="wowslider-container1">
                                <div class="ws_images">
                                    <ul>
                                        <li>@*<a href="#">*@<img src="@Url.Content(Model.homeModel.Image1)" style="width:100%;height:550px;" alt="image slider jquery" title="@Model.homeModel.TextImag1" id="wows1_0" />@*</a>*@</li>
                                        <li><img style="width:100%;height:550px;" src="@Url.Content(Model.homeModel.Image2)" alt="slideshow_image_2-min" title="@Model.homeModel.TextImag2" id="wows1_1" /></li>
                                        <li><img style="width:100%;height:550px;" src="@Url.Content(Model.homeModel.Image2)" alt="slideshow_image_2-min" title="@Model.homeModel.TextImag3" id="wows1_1" /></li>
                                    </ul>
                                </div>
                                <div class="ws_bullets">
                                    <div>
                                        <a href="#" title="slideshow_image_1-min-rs"><span><img src="@Url.Content(Model.homeModel.Image1)" alt="">1</span></a>
                                        <a href="#" title="slideshow_image_2-min"><span><img src="@Url.Content(Model.homeModel.Image2)" alt="">2</span></a>
                                        <a href="#" title="slideshow_image_2-min"><span><img src="@Url.Content(Model.homeModel.Image3)" alt="">3</span></a>
                                    </div>
                                </div><div class="ws_script" style="position:absolute;left:-99%"><a href="http://wowslider.com">slider bootstrap</a> by WOWSlider.com v7.7</div>
