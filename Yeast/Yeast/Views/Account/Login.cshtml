<body class=" login" style="background:url(../../Content/images/bluebackground1.png);" >
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="../assets/pages/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="@Url.Action("Login","Account")" method="post">
            <h3 class="form-title">ورود به پنل مدیریت</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> نام کاربری و پسورد را وارد کنید. </span>
            </div>
            @Html.ValidationSummary()
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">@Resources.Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="example@example.com" name="Username" />
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Resources.Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Resources.Password" name="Password" />
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="RememberMe" value="1" /> مرا به خاطر بسپار
                    @Html.ValidationMessageFor(model => model.RemmemberMe)
                    <span></span>
                </label>
                <button type="submit" class="btn green pull-right"> ورود </button>
            </div>
           
           
          
        </form>

    </div>
    <!-- END LOGIN -->
