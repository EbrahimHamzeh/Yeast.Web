@model Yeast.Model.FrontEnd.PostModel

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MetaTag{
	<meta name="keywords" content="JavaScript, jQuery" />
	<meta http-equiv="last-modified" content="Sat, 04 Aug 2018 07:36:10 GMT" />
	<meta name="description" content="jQuery سال‌ها به عنوان جزء اصلی توسعه‌ی برنامه‌های وب مطرح بوده‌است و برای بسیاری از توسعه دهندگان وب، یک پیشنیاز پیش‌فرض محسوب می‌شود؛ ساده‌اس ..." />
	<meta name="author" content="همرسین توس (@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~")))" />

	<meta itemprop="name" content="@Model.Title">
	<meta itemprop="description" content="@Model.Description">

	<meta name="twitter:site" content="همرسین توس">
	<meta name="twitter:title" content="@Model.Title">
	<meta name="twitter:description" content="@Model.Description">
	<meta name="twitter:creator" content="همرسین توس (@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~")))">

	<meta property="og:title" content="@Model.Title" />
	<meta property="og:type" content="article" />
	<meta property="og:url" content="@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Action("Details","Post", new { lang = CultureHelper.GetCurrentNeutralCulture(), id = Model.Id }))" />
	<meta property="og:description" content="@Model.Description" />
	<meta property="og:site_name" content="همرسین توس" />
	<meta property="article:published_time" content="@Model.CreatedDate" />
	@*<meta property="article:modified_time" content="Sat, 04 Aug 2018 07:36:10 GMT" />*@
	<meta property="article:section" content="article" />
	<meta property="article:tag" content="article" />
	}

	<article class="blog grid-item  blog-detail-page">
		<div class="blog-post-figure">
			<figure class="blog-thumbnail">
				<a href="#">
					<img style="height:400px;width:80%;" src="~/Content/upload/images/@Model.TitleImg" alt="Blog NewFashion" title="Blog NewFashion">
				</a>
			</figure>
		</div>

		<div class="blog-post-body" style="width: 80%;">
			<header class="blog-header">
				<h2 class="blog-title">
					<a href="#">@Model.Title</a>
				</h2>
				<p class="blog-date">@Model.CreatedDate</p>
			</header>
			<div class="blog-post">
				@Html.Raw(Model.Body)
			</div>


			<ul class="tags">
				@foreach (var item in Model.TagList)
				{
					<li class="tag">
						<a href="#">@item.Text</a>
					</li>
				}

			</ul>
		</div>
	</article>